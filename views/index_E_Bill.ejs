        display: flex;
        padding: .5em;
    }

    .invoicenumber {
        margin-left: .5em;
        font-weight: 400;
    }

    .invoicedate {
        position: absolute;
        display: flex;
        float: right;
        right: 0em;
        margin-right: 1.3em;
        font-weight: 400;
    }

    .padding {
        padding-left: 1.1em;
    }
