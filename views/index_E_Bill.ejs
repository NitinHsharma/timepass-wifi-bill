        .bg {
            background-color: #cccccc75;
        }

        td>p {
            margin: .9em 0 0 0;
            padding-left: 100px;
            padding-right: 100px;
            border-bottom: .1em solid #cccccc75;
            font-size: 1.3em;

        }

        .finalamt {
            float: right;
            right: 1.1em;
            position: absolute;
        }

    }

    td>p {
        margin: .9em 0 0 0;
        padding-left: 100px;
        padding-right: 100px;
        border-bottom: .1em solid #cccccc75;
        font-size: 1.3em;
